<ul class="nav navbar-nav navbar-right">
    <% if(!user_signed_in?) %>
		<li>
			<%= glink_to("user", "Sign In", "/users/login","") %>
		</li>
	<% else %>
	<li class='dropdown'>
	    	<a href='javascript:void(0);' class=''>
			<%= g("user") %>
			<%= current_user.try(:first_name) || current_user['email'].sub(/@.+$/,'') %> 
			<%= span("caret hidden-sm hidden-xs") %>
			</a>

		<ul class='dropdown-menu dropdown-menu-right'>
	    		<li><a href="/users/account">User Account</a></li>
	    		<li><%= logout(g("log-out")+" Sign Out") %></li>
		</ul>
	</li>
	<% end %>
</ul>

